// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  avatarUrl String?
  recipes   Recipe[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id           String    @id @default(cuid())
  title        String
  contributor  String
  prepTime     Int?
  servings     Int?
  course       String?
  cuisine      String?
  difficulty   String?
  ingredients  String
  instructions String
  tags         String    // JSON string array
  summary      String
  story        String?
  imageUrl     String
  imageHint    String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
